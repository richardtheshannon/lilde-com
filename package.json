{
  "name": "lilde-com",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start -p $PORT -H 0.0.0.0",
    "start:prod": "npx prisma migrate deploy && next start -p $PORT -H 0.0.0.0",
    "start:railway": "next start -p $PORT -H 0.0.0.0",
    "lint": "next lint",
    "db:push": "prisma db push --accept-data-loss",
    "db:migrate:dev": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:status": "prisma migrate status",
    "db:generate": "prisma generate",
    "db:validate": "prisma validate && prisma generate --no-engine",
    "db:reset": "prisma migrate reset --force",
    "dev:fresh": "rm -rf .next && npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["nextjs", "project-management", "timeline", "typescript", "postgresql"],
  "author": "Richard Shannon",
  "license": "ISC",
  "description": "Full-stack Next.js project management application with timeline generation and PostgreSQL backend",
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^5.7.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "formidable": "^3.5.4",
    "jspdf": "^3.0.2",
    "next": "^14.2.22",
    "next-auth": "^4.24.5",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.10.1",
    "postcss": "^8.5.6",
    "prisma": "^5.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.62.0",
    "recharts": "^3.1.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
